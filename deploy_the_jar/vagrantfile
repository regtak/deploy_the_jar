Vagrant.configure(2) do |config|	
	config.vm.box = "C:\HashiCorp\Vagrant\Centos_puppet\centos_box_no_config.box"
	config.vm.network "forwarded_port", guest: 8080, host: 8870
	config.vm.provision "shell", inline: <<-SHELL
		maj_version=`rpm -qa \*-release |grep -Ei "redhat|centos"|cut -d"-" -f3`
		sudo rpm -ivh https://yum.puppetlabs.com/puppetlabs-release-el-$maj_version.noarch.rpm
		sudo yum -y install puppet
SHELL
    config.vm.provision :puppet do |puppet|
		puppet.manifests_path = 'puppet/manifests'
		puppet.module_path    = 'puppet/modules'
		puppet.options        = '--verbose'
	end
end
